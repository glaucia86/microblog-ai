{
  "name": "microblog-ai",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix vite:build",
    "build:function": "cd server && npm run build",
    "build:all": "npm run clean && npm run build && npm run build:function",
    "dev": "npm-run-all --parallel dev:*",
    "dev:remix": "remix vite:dev",
    "dev:function": "cd server && npm run build && npm run start",
    "clean": "rimraf build && rimraf server/dist",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "deploy": "npm run build:all && swa deploy"
  },
  "dependencies": {
    "@azure/functions": "^4.6.0",
    "@azure/identity": "^4.6.0",
    "@azure/openai": "^2.0.0",
    "@heroicons/react": "^2.2.0",
    "@remix-run/node": "^2.15.3",
    "@remix-run/react": "^2.15.3",
    "@remix-run/serve": "^2.15.3",
    "@scandinavianairlines/remix-azure-functions": "latest",
    "@types/node": "^22.12.0",
    "azure-functions-core-tools": "^4.0.6610",
    "dotenv": "^16.4.7",
    "isbot": "^4.1.0",
    "openai": "^4.81.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.15.3",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.17.1"
  }
}
