{
  "routes": [
    {
      "route": "/build/*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST"],
      "rewrite": "/build/server/index.js"
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "rewrite": "/build/client/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/build/client/index.html",
    "exclude": ["/build/*", "/api/*", "/*.{png,jpg,gif,svg,js,css}"]
  },
  "platform": {
    "apiRuntime": "node:18"
  },
  "mimeTypes": {
    ".js": "text/javascript",
    ".css": "text/css",
    ".html": "text/html"
  }
}
